<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculator_implementation.MainActivity" >
    
    <TextView
        android:id="@+id/DisplayResult"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bDiv"
        android:layout_marginTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initialvalue" />
    
    <Button
        android:id="@+id/bDiv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bSub"
        android:layout_toRightOf="@+id/bSub"
        android:text="@string/divoperator"
        />
    
    <Button
        android:id="@+id/bAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bSub"
        android:layout_alignBottom="@+id/bSub"
        android:layout_toLeftOf="@+id/bSub"
        android:text="@string/addoperator"
        />
    
    <Button
        android:id="@+id/bSub"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/DisplayResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="@string/suboperator"
        />

    <Button
        android:id="@+id/bMul"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bAdd"
        android:layout_alignBottom="@+id/bAdd"
        android:layout_toLeftOf="@+id/bAdd"
        android:text="@string/muloperator" />

    <Button
        android:id="@+id/bEight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bAdd"
        android:layout_toLeftOf="@+id/bSub"
        android:text="@string/eight" />

    <Button
        android:id="@+id/bNine"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bDiv"
        android:layout_toLeftOf="@+id/bDiv"
        android:text="@string/nine" />

    <Button
        android:id="@+id/bSeven"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bMul"
        android:layout_below="@+id/bMul"
        android:text="@string/seven" />

    <Button
        android:id="@+id/bSix"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bEight"
        android:layout_toRightOf="@+id/bEight"
        android:text="@string/six" />

    <Button
        android:id="@+id/bFive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bSix"
        android:layout_alignBottom="@+id/bSix"
        android:layout_toRightOf="@+id/bSeven"
        android:text="@string/five" />

    <Button
        android:id="@+id/bFour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bSeven"
        android:layout_below="@+id/bSeven"
        android:text="@string/four" />

    <Button
        android:id="@+id/bTwo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bSix"
        android:layout_toLeftOf="@+id/bSix"
        android:text="@string/two" />

    <Button
        android:id="@+id/bZero"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bFour"
        android:layout_below="@+id/bTwo"
        android:layout_toLeftOf="@+id/bTwo"
        android:text="@string/zero" />

    <Button
        android:id="@+id/bThree"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bZero"
        android:layout_toLeftOf="@+id/bDiv"
        android:text="@string/three" />

    <Button
        android:id="@+id/bOne"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bFive"
        android:layout_toLeftOf="@+id/bFive"
        android:text="@string/one" />

    <Button
        android:id="@+id/bEqual"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/bDecimal"
        android:layout_alignLeft="@+id/bDiv"
        android:layout_below="@+id/bSix"
        android:text="@string/equaloperator" />

    <TextView
        android:id="@+id/DisplayArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/DisplayResult"
        android:layout_marginTop="32dp"
        android:text="@string/DisplayArray"
        android:textColor="#FF0000" />

    <Button
        android:id="@+id/bDecimal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bTwo"
        android:layout_toLeftOf="@+id/bThree"
        android:text="@string/decimal" />

    <Button
        android:id="@+id/bNegative"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bThree"
        android:layout_toLeftOf="@+id/bEqual"
        android:text="@string/negative" />

    <Button
        android:id="@+id/bClear"
        android:textSize="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bDiv"
        android:layout_below="@+id/bDiv"
        android:text="@string/clearoperator" />

    <Button
        android:id="@+id/bDel"
        android:textSize="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bClear"
        android:layout_below="@+id/bClear"
        android:text="@string/deleteoperator" />

    <TextView
        android:id="@+id/DisplayOperators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/DisplayResult"
        android:layout_below="@+id/DisplayArray"
        android:textColor="#00CC00"
        android:text="@string/NumberList" />

</RelativeLayout>
