import java.util.EmptyStackException;
import java.util.Queue;
import java.util.concurrent.LinkedBlockingQueue;

public class MainActivity extends ActionBarActivity {
	/* Is Called when the activity is first created*/
	Button add, sub, mul, div;
	TextView display;
	String result;
	private LinkedBlockingQueue<String> displayqueue;	//using a linkedblockingqueue b/c its unbound + FIFO
	
	//constructor to make a queue for displaying what is pushed
	public MainActivity() {
		this.displayqueue = new LinkedBlockingQueue<String>();
	}
	
	//Used to display items that were punched into the calculator
	public void Display_Items(Queue<String> DisplayList) {
		String displaystring = new String();
		do{
			//initial condition if empty display 0, otherwise do the displaying
			if(DisplayList.isEmpty()) {
				displaystring = "0";
				//display.setText("0");
				break;
			}
			//pull string element and add to the equation
			displaystring = displaystring + DisplayList.poll();
		} while(DisplayList.isEmpty() == false);
		return;
	}
	
