package com.example.calculator_implementation;

import java.util.Queue;
import java.util.concurrent.LinkedBlockingQueue;

import org.junit.Test;

import junit.framework.TestCase;

public class MainActivityTest extends TestCase {

	@Test
	public void isEmptyDisplay() {
		Queue<String> List = MainActivity();
		String OutputZero = "0";
		String CheckZero = Display_Items(DisplayList);
		assertTrue(CheckZero.equals(OutputZero));
	}

	private String Display_Items(Queue<String> DisplayList) {
		String displaystring = new String();
		do{
			//initial condition if empty display 0, otherwise do the displaying
			if(DisplayList.isEmpty()) {
				displaystring = "0";
				//display.setText("0");
				break;
			}
			//pull string element and add to the equation
			displaystring = displaystring + DisplayList.poll();
		} while(DisplayList.isEmpty() == false);
		return displaystring;
	}
	
}
